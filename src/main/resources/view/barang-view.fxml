<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.depichan.controller.BarangController"
            minWidth="900" minHeight="600">
    <children>
        <ScrollPane fitToWidth="true" fitToHeight="true" 
                   AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" 
                   AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"
                   hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
            <content>
                <VBox spacing="15" minWidth="900">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>
                    
                    <!-- Header -->
                    <HBox alignment="CENTER" minHeight="50">
                        <Label text="Data Barang Toko Kelontong" 
                               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    </HBox>
                    
                    <!-- Search and Filter Controls with Responsive Layout -->
                    <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 8; 
                                               -fx-border-radius: 8; -fx-border-color: #e0e0e0; -fx-border-width: 1;
                                               -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 4, 0, 0, 2);">
                        <padding>
                            <Insets top="15" right="15" bottom="15" left="15"/>
                        </padding>
                        
                        <Label text="ðŸ” Pencarian dan Filter" 
                               style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #2c3e50;"/>
                        
                        <!-- Responsive Controls Grid -->
                        <GridPane hgap="15" vgap="10" alignment="CENTER_LEFT">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="40" minWidth="200"/>
                                <ColumnConstraints percentWidth="20" minWidth="150"/>
                                <ColumnConstraints percentWidth="20" minWidth="100"/>
                                <ColumnConstraints percentWidth="20" minWidth="100"/>
                            </columnConstraints>
                            
                            <TextField fx:id="tfSearch" promptText="ðŸ” Cari nama barang..." 
                                      GridPane.columnIndex="0" GridPane.rowIndex="0"
                                      style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #ddd; 
                                             -fx-border-width: 1; -fx-padding: 8 15 8 15; -fx-font-size: 14px;"
                                      minHeight="35"/>
                                      
                            <ComboBox fx:id="cbSortBy" promptText="Urutkan berdasarkan" 
                                     GridPane.columnIndex="1" GridPane.rowIndex="0"
                                     style="-fx-background-radius: 20; -fx-border-radius: 20;"
                                     minHeight="35"/>
                                     
                            <ComboBox fx:id="cbSortOrder" promptText="Urutan" 
                                     GridPane.columnIndex="2" GridPane.rowIndex="0"
                                     style="-fx-background-radius: 20; -fx-border-radius: 20;"
                                     minHeight="35"/>
                                     
                            <Button text="ðŸ”„ Refresh" onAction="#onRefresh" 
                                   GridPane.columnIndex="3" GridPane.rowIndex="0"
                                   style="-fx-background-color: linear-gradient(to bottom, #2196F3, #1976D2); 
                                          -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;
                                          -fx-background-radius: 20; -fx-border-radius: 20;
                                          -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 3, 0, 0, 1);"
                                   minHeight="35" minWidth="80"/>
                        </GridPane>
                    </VBox>
                    
                    <!-- Data Table with Enhanced Styling -->
                    <VBox spacing="10" VBox.vgrow="ALWAYS" 
                          style="-fx-background-color: white; -fx-background-radius: 8; 
                                 -fx-border-radius: 8; -fx-border-color: #e0e0e0; -fx-border-width: 1;
                                 -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 6, 0, 0, 3);">
                        <padding>
                            <Insets top="15" right="15" bottom="15" left="15"/>
                        </padding>
                        
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label text="ðŸ“¦" style="-fx-font-size: 20px;"/>
                            <Label text="Daftar Barang" 
                                   style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #2c3e50;"/>
                        </HBox>
                        
                        <TableView fx:id="tableBarang" VBox.vgrow="ALWAYS"
                                  style="-fx-background-color: transparent; -fx-table-cell-border-color: #e0e0e0;
                                         -fx-selection-bar: #e3f2fd; -fx-selection-bar-non-focused: #f5f5f5;">
                            <columns>
                                <TableColumn fx:id="colId" text="ID" minWidth="60" 
                                           style="-fx-alignment: CENTER;"/>
                                <TableColumn fx:id="colNama" text="Nama Barang" minWidth="200" 
                                           style="-fx-alignment: CENTER-LEFT;"/>
                                <TableColumn fx:id="colKategori" text="Kategori" minWidth="150" 
                                           style="-fx-alignment: CENTER;"/>
                                <TableColumn fx:id="colHarga" text="Harga" minWidth="120" 
                                           style="-fx-alignment: CENTER-RIGHT;"/>
                                <TableColumn fx:id="colStok" text="Stok" minWidth="80" 
                                           style="-fx-alignment: CENTER;"/>
                                <TableColumn fx:id="colTanggal" text="Tanggal Masuk" minWidth="150" 
                                           style="-fx-alignment: CENTER;"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </VBox>
                    
                    <!-- Action Buttons with Enhanced Styling -->
                    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 8; 
                                               -fx-border-radius: 8; -fx-border-color: #e0e0e0; -fx-border-width: 1;
                                               -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 4, 0, 0, 2);">
                        <padding>
                            <Insets top="15" right="15" bottom="15" left="15"/>
                        </padding>
                        
                        <Label text="âš¡ Aksi Cepat" 
                               style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #2c3e50;"/>
                        
                        <!-- Responsive Button Grid -->
                        <GridPane hgap="15" vgap="10" alignment="CENTER">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="16.67" minWidth="140"/>
                                <ColumnConstraints percentWidth="16.67" minWidth="140"/>
                                <ColumnConstraints percentWidth="16.67" minWidth="140"/>
                                <ColumnConstraints percentWidth="16.67" minWidth="140"/>
                                <ColumnConstraints percentWidth="16.67" minWidth="140"/>
                                <ColumnConstraints percentWidth="16.67" minWidth="140"/>
                            </columnConstraints>
                            
                            <Button text="ðŸ  Dashboard" onAction="#onDashboard"
                                   GridPane.columnIndex="0" GridPane.rowIndex="0"
                                   style="-fx-background-color: linear-gradient(to bottom, #9C27B0, #7B1FA2); 
                                          -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;
                                          -fx-background-radius: 15; -fx-border-radius: 15;
                                          -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 3, 0, 0, 1);"
                                   minHeight="40" minWidth="140"/>
                                   
                            <Button text="ðŸ’° Jual Barang" onAction="#onJualBarang"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0"
                                   style="-fx-background-color: linear-gradient(to bottom, #FF9800, #F57C00); 
                                          -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;
                                          -fx-background-radius: 15; -fx-border-radius: 15;
                                          -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 3, 0, 0, 1);"
                                   minHeight="40" minWidth="140"/>
                                   
                            <Button text="ðŸ“ˆ Tambah Stok" onAction="#onTambahStok"
                                   GridPane.columnIndex="2" GridPane.rowIndex="0"
                                   style="-fx-background-color: linear-gradient(to bottom, #4CAF50, #388E3C); 
                                          -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;
                                          -fx-background-radius: 15; -fx-border-radius: 15;
                                          -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 3, 0, 0, 1);"
                                   minHeight="40" minWidth="140"/>
                                   
                            <Button text="âž• Tambah Barang" onAction="#onTambahBarang"
                                   GridPane.columnIndex="3" GridPane.rowIndex="0"
                                   style="-fx-background-color: linear-gradient(to bottom, #2196F3, #1976D2); 
                                          -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;
                                          -fx-background-radius: 15; -fx-border-radius: 15;
                                          -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 3, 0, 0, 1);"
                                   minHeight="40" minWidth="140"/>
                                   
                            <Button text="ðŸ“Š Cetak Laporan" onAction="#onLaporan"
                                   GridPane.columnIndex="4" GridPane.rowIndex="0"
                                   style="-fx-background-color: linear-gradient(to bottom, #E91E63, #C2185B); 
                                          -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;
                                          -fx-background-radius: 15; -fx-border-radius: 15;
                                          -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 3, 0, 0, 1);"
                                   minHeight="40" minWidth="140"/>
                        </GridPane>
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
